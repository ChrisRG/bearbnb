<div class="container" style="margin-top: 5em">
  <h1 class="text-center m-4">Find your favorite bear in a flat near you</h1>

  <% @flats.each do |flat|%>
    <div class="card-trip mb-4">
      <%= cl_image_tag flat.photo.key %>
      <div class="card-trip-infos">
        <div>
          <h2><%= link_to flat.name, flat_path(flat) %></h2>
          <p><%= flat.description %></p>
          <p>You will be welcomed by our wonderful <%= flat.bear.species %> bear <strong><%= flat.bear.name %></strong></p>
        </div>
        <h2 class="card-trip-pricing"><%= flat.price %>â‚¬</h2>
        <%= cl_image_tag flat.bear.photo.key, class:"card-trip-user avatar-large" %>
      </div>
    </div>
  <% end %>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
